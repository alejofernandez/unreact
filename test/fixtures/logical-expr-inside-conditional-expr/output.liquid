<div>
  {% if error and errorMsg %}
    <p class="hlp-input-message hlp-input-errormsg">{{ errorMsg }}</p>
  {% endif %}

  {% unless onlyLogo %}
    {% if text %}{{ text }}{% else %}
      <p>Log In to 
        <strong>{{ company }}</strong>
       to get started using 
        <strong>{{ app }}</strong>
      .</p>
    {% endif %}
  {% endunless %}
</div>
